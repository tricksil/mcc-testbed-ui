{
  "name": "mcc-testbed",
  "title": "MCC Testbed",
  "summary": "A test tool for Mobile Cloud Computing",
  "description": "The MCC Testbed Tool assists Mobile Cloud Computer developers and researchers in creating custom scenarios and running custom experiments in a virtual test environment based on lightweight virtualization.",
  "version": "1.0.2",
  "private": false,
  "author": "Patrick Silva <patrickeeep12@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tricksil/tcc-mcc"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/styles": "^4.11.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "axios": "^0.21.1",
    "clsx": "^1.1.1",
    "electron-is-dev": "^2.0.0",
    "faker": "^5.4.0",
    "history": "^5.0.1",
    "internal-ip": "^6.2.0",
    "ip": "^1.1.5",
    "is-electron": "^2.2.1",
    "os-utils": "^0.0.14",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "react-select": "^4.3.1",
    "react-text-mask": "^5.4.3",
    "styled-components": "^5.2.1",
    "uuid": "^8.3.2",
    "vis-network-react": "^1.3.6",
    "web-vitals": "^0.2.4"
  },
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn start\" \"yarn electron:start\"",
    "electron:build": "yarn build && GH_TOKEN= electron-builder -c.extraMetadata.main=build/main.js --publish always",
    "electron:build:win": "yarn build && set GH_TOKEN= && electron-builder -c.extraMetadata.main=build/main.js --publish always",
    "electron:start": "wait-on http://localhost:3000 && electron ."
  },
  "build": {
    "productName": "MCC Testbed",
    "appId": "com.tcc.mcc",
    "buildVersion": "1.0.1",
    "mac": {
      "target": "dmg",
      "category": "Aplications",
      "icon": "resources/icon512x512.png"
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "resources/icon512x512.png"
    },
    "linux": {
      "target": [
        "deb",
        "snap"
      ],
      "category": "Development"
    },
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "resources/**/*"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": {
      "provider": "github",
      "owner": "tricksil",
      "repo": "tcc-mcc",
      "private": false
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "babel-plugin-root-import": "^6.6.0",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "electron": "^17.0.1",
    "electron-builder": "^22.11.7",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1",
    "react-app-rewired": "^2.1.8",
    "wait-on": "^5.3.0"
  },
  "license": "MIT"
}
